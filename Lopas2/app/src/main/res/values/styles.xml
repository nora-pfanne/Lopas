<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Buttons-->

    <style name="VocabularyBasicButtonLernen">
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:backgroundTint">@color/Black </item>
        <item name="android:textColor">@color/GhostWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:text">@string/lernen</item>
    </style>

    <style name="VocabularyBasicButtonTest">
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:backgroundTint">@color/GhostWhite</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:text">@string/test</item>
        </style>

    <!--TextViews-->

    <style name="TitelTextView">
        <item name="android:textColor">@color/Grey</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ThemaTextView">
        <item name="android:textColor">@color/Black</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
