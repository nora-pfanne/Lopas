<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.norablakaj.lateinapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LektionUebersicht"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.AndroidDatabaseManager"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Woerterbuch"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Vokabeltrainer"
            android:windowSoftInputMode="stateVisible"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.GrammatikA"
            android:theme="@style/noAnimationTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.GrammatikB"
            android:theme="@style/noAnimationTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.GrammatikC"
            android:theme="@style/noAnimationTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Grammatikeinheiten.GrammatikDeklination"
            android:screenOrientation="portrait"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>